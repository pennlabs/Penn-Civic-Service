<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

<%= form_tag("/newSignup", method: "post") do %>
  <%= label_tag(:first_name, "First name") %> 
  <%= text_field_tag(:first_name, nil, placeholder: "First name") %>
  <%= label_tag(:last_name, "Last name") %>
  <%= text_field_tag(:last_name, nil, placeholder: "Last name") %>
  <%= label_tag(:user) %>
  <%= text_field_tag(:user, nil, placeholder: "Username") %>
  <%= label_tag(:pass) %>
  <%= password_field_tag(:pass, nil, placeholder: "Password") %>
  <div style="max-width:300px">
    <a href="/login">Login </a>
    <%= submit_tag("Sign up!") %> 
  </div>
<% end %> 
