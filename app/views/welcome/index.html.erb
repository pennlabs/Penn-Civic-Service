<div>
    <div id="leftPanel">
        <div class="center"><h1 id="panelText">Be a friend. Lend a hand.</h1></div>
        <div class="center"><%= image_tag('Icons/hands.png', :style => "padding-top: 76px; width: 250px; height: auto")%></div>
    </div>
    <div id="rightPanel" >
        <div class="center" id="rightPanelForm">
            <% if not logged_in? %>
                <center><p id="signUpText">Sign up to post your opportunities today.</p></center>
            <br>
            <center>
                <%= form_tag("/signup", method: "post") do %>
                    <%= text_field_tag(:first_name, nil, placeholder: "First name") %>
                <br>
                <%= text_field_tag(:last_name, nil, placeholder: "Last name") %>
                <br>
                <%= text_field_tag(:user, nil, placeholder: "Username") %>
                <br>
                <%= password_field_tag(:pass, nil, placeholder: "Password") %>
                <br>
                <div id="signUpButtonGroup">
                    <a id="loginButton" href="/login">Login</a>
                    <%= submit_tag("Sign up!", :style => "text-align: center") %>
                </div>
            </div>
            <div id="inner_footer" >
                <%= image_tag("labs.png", :alt => "labs" , :style => "width: 100px; height: auto; padding: 10px;") %>
                <%= image_tag("ua.png", :alt => "ua" , :style => "width: 100px; height: auto; padding: 10px;") %>
            </div>
        </center>
    <% end %>
    <% else %>
            <div class="contact_form">
            <center><h1 id="socialText">Want to tell the world?</h1></center>
            <center>
                <br>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 col-xs-offset-3 col-sm-offset-3 col-md-offset-3 col-lg-offset-3">
                    <a id="fbBtnLink" href="http://www.facebook.com/sharer.php?u=http://www.pennvolvement.com" target="_blank"><div class="socialBtn">
                        <center><i class="fa fa-facebook-official"></i></center>
                    </div></a>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
                    <div class="socialBtn">
                        <center><a id="twtrBtnLink" href="https://twitter.com/home?status=Check%20out%20www.pennvolvement.com%20and%20make%20a%20difference%20in%20Philly!" target="_blank">
                                <i class="fa fa-twitter"></i></a>
                        </center>
                    </div>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
                    <div class="socialBtn">
                        <center><a id="gPlusBtnLink" href="https://plus.google.com/share?url=http://www.pennvolvement.com" target="_blank">
                                <i class="fa fa-google-plus"></i></a>
                        </center>
                    </div>
                </div>
            </div>
        </center>
    <% end %>
    </div>
</div>
