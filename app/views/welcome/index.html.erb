        <div class="textCenter col-xs-2 col-sm-2 col-lg-2 col-md-2"><a href="/search?query=women"><%= image_tag('Icons/women.png', :alt => "rss feed", :class => "icons")%></a><br><center>Women</center></div>
        <div class="textCenter col-md-2 col-xs-2 col-sm-2 col-lg-2"><a href="/search?query=animal"><%= image_tag('Icons/animal.png', :alt => "rss feed", :class => "icons")%></a><br><center>Animals</center></div>
