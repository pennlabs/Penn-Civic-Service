<%= form_tag('/login') do %>
  <div style="max-width: 200px;">
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div> 
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div>
      <%= submit_tag "Log in" %>
    </div>
  </div>
<% end %>
