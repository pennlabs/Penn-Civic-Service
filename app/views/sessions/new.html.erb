<div class="formStyle col-lg-2 col-md-4 col-sm-4 col-xs-4 col-lg-offset-5 col-md-offset-4 col-sm-offset-4 col-xs-offset-1" style="transform: translateY(-40%); top: 30%">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8  col-lg-offset-0 col-md-offset-2 col-sm-offset-2 col-xs-offset-2" style="text-align: center">
        <%= form_tag('/login') do %>
            <br>  
        <div>
            <%= text_field_tag :username, nil, placeholder: 'Username' %>
        </div>
        <br>
        <div> 
            <%= password_field_tag :password, nil, placeholder: 'Password' %>
        </div>
        <br>

        <div>
            <%= submit_tag "Log in" %>
        </div>
        <br>
    <% end %>
    </div>
</div>
