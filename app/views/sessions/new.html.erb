<div style="position: relative; transform: translateY(-40%); top: 30%; transform: translateX(40%);">
<div class="formStyle">
    <%= form_tag('/login') do %>
  <center>
  <br>  
  <div>
    <%= text_field_tag :username, nil, placeholder: 'Username' %>
  </div>
  <br>
  <div> 
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>
  <br>

  <div>
    <%= submit_tag "Log in" %>
  </div>
  <br>
  </center>
<% end %>
</div>
</div>
