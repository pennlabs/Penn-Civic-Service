<% if logged_in? %>
    <div class="col-md-6 col-md-offset-1 col-lg-6 col-lg-offset-1 col-sm-6 col-sm-offset-1 col-xs-12 col-xs-offset-0" id="backdrop">
    <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        </div>
        <% end %>
    <div class="col-md-6">
        <h3> User Information </h3>
        <div class="field">
            <%= f.label :firstname, "First name" %> <br>
            <%= f.text_field :firstname, :value => current_user.firstname %>
        </div>
        <div class="field">
            <%= f.label :lastname, "Last name" %> <br>
            <%= f.text_field :lastname, :value => current_user.lastname%>
        </div>
        <div class="field">
            <%= f.label :username %> <br>
            <%= f.text_field :username, :value => current_user.username %>
        </div>
        <div class = "field">
            <%= f.label :email %> <br>
            <%= f.email_field :email, :placeholder => current_user.email %>
        </div>
        <div class="field">
            <%= f.label :password %> <br>
            <%= f.password_field :password, :placeholder => "New password" %>
        </div>
    </div>
    <div class="col-md-6 col-sm-6 col-lg-6">
        <h3>Organization Information</h3>
        <div class="field">
            <%= f.label :org_name, "Name" %> <br>
            <%= f.text_field :org_name, :placeholder => current_user.org_name %>
        </div>
        <div class="field">
            <%= f.label :org_url, "URL" %> <br>
            <%= f.text_field :org_url, :placeholder => current_user.org_url  %>
        </div>
        <div class="field">
            <%= f.label :org_address, "Address" %> <br>
            <%= f.text_field :org_address, :placeholder => current_user.org_address %>
        </div>
        <div class="field">
            <%= f.label :city %> <br>
            <%= f.text_field :city, :placeholder => current_user.city %>
        </div>
        <div class="field">
            <%= f.label :state %> <br>
            <%= f.text_field :state, :placeholder => current_user.state %>
        </div>
        <div class="field">
            <%= f.label :zipcode, "Zip code" %> <br>
            <%= f.text_field :zipcode, :placeholder => current_user.zipcode %>
        </div>
    </div>
    <div id="white" class="actions col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <%= f.submit 'Save Updates', :id => "newSubmit"%>
    </div>
<% end %>
</div>
<div style="" class="col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-sm-3 col-md-3 col-lg-3 col-xs-12 col-xs-offset-0" id="backdropEvents">
    <h2> My Events </h2>
    <%= render 'users/card' %>
</div>
<% else %>
  <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
    <h1>
      Fuck off 
    </h1>
  </div>
<% end %>
