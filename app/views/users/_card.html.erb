<% if current_user.events.any? %>
  <%= (current_user.events).each do |e| %>
  <div class="card">
      <div class="cardTitle"><strong><%= e.title %></strong></div>
      <div class="cardRest col-sm-12 col-xs-12 col-md-12 col-lg-12">
          <div class="cardElem col-xs-7 col-sm-7 col-md-7 col-lg-7" style="padding: 0px">Date: <%= e.date %></div>
          <div class="cardElem col-xs-5 col-sm-5 col-md-5 col-lg-5" style="padding: 0px;">Time: <%= e.time %></div>
          <div class="clearfix"></div>
          <div class="cardElem col-xs-6 col-sm-6 col-md-6 col-lg-6" style="padding-left: 0px; padding-top: 5px">Description: <p><%= e.description %></p></div>
          <div style="padding: 0px" class="cardCal col-md-5 col-sm-5 col-xs-5 col-lg-5">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 cardCalMonth">
                  <%= to_month(e.date[5..6]) %>
              </div>
              <%= e.date[8..9] %>
          </div>

      </div>

  </div>
  <div class="clearfix"></div>
  <div class="row nowrap">
    <div>
      <%= link_to '/events/' + e.id.to_s, method: :delete do %>
        <i class="red fa fa-times"></i> Delete
      <% end %>
      <a href=<%= "/events/" + e.id.to_s + "/edit/"%>> <i class="green fa fa-pencil-square-o"></i>  Edit</a>
    </div>
  </div>
  <br>
  <br>
  <% if (e).eql?(current_user.events.last) then break end%>
  <% end %>
<% else %>
  No events yet!
<% end %>
